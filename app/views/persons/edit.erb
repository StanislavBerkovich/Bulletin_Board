<h2>Edit user: <%= full_name @person %></h2>

<%= simple_form_for(@person, url: persons_save_changes_path(id: @person), html: {method: :put}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: false, autofocus:true %>

      <%= f.input :surname, required: false %>
      <%= f.input :email, required: false%>

      <% if can? :assign_roles, @person %>
        <label>Select role:</label>
        <%= f.select :role, Role.get_avalible %>
      <% end %>
      <%= f.input :password, autocomplete: "off" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
<% end %>

<%= link_to "Back", :back %>
