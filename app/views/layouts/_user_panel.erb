            <li><%= button_to t('.approve_new_adverts'), admin_job_nonpublished_path, method: :get, class: 'btn btn-block' %></li>
        <% end %>
        <% if can? :create, Type %>
            <li><%= button_to t('.manage_type'), admin_job_manage_advert_type_path, method: :get, class: 'btn btn-block' %></li>
