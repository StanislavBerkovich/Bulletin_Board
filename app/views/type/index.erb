<h3>All types:</h3>
<ul>
  <% @types.each do |type| %>
      <li>
        <%= type %>
        <% if can? :destroy, type %>
            <%= link_to 'Delete', type, method: :delete, class: 'btn btn-danger' %>
        <% end %>
      </li>
  <% end %>
</ul>

<h3>New type</h3>

<%= simple_form_for @type do |f| %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
<% end %>