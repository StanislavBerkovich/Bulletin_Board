<div class="well">
  <% if can? :destroy, advert.user %>
      <div id="options_panel" class="pull-right">
        <%= link_to '&times'.html_safe, advert, method: :delete, class: 'close', rel: "tooltip", title: "Удалить", data: {placement: "top"} %>
      </div>

  <% end %>
  <%= link_to advert_path(advert) do %>
      <p><%= advert.body %></p>
  <% end %>
  <p><%= advert.type %></p>

  <p><%= advert.state %></p>
  <% if can? :edit, advert.user %>
      <%= link_to full_name(advert.user), persons_profile_path(id: advert.user) %>
  <% else %>
      <small class='pull-right'><%= full_name advert.user %></small>
  <% end %>

  <% if can? :publish, advert && advert.state == :new %>
      <%= button_to 'Public this advert'.html_safe, admin_job_publish_path(advert: advert), method: :post, class: 'btn btn-success pull-right' %>
  <% end %>
</div>

