<%= simple_form_for(@advert) do |f| %>

    <div class="form-inputs">
      <%= f.input :body %>
    </div>

    <div class="form-inputs">
      <%= f.label "Type of advert" %>
      <%= f.select :type, @types %>
    </div>

    <div class="form-inputs">
      <%= f.label "Choose images" %>
      <%= f.file_field('advert_pictures_image', multiple: true, name: "advert[pictures_attributes][][image]") %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

<% end %>
